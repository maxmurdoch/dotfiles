# This tmux statusbar config was created by tmuxline.vim
# on Wed, 02 Sep 2015

set -g status-bg "colour21"
set -g message-command-fg "colour8"
set -g status-justify "left"
set -g status-left-length "100"
set -g status "on"
set -g pane-active-border-fg "colour7"
set -g message-bg "colour7"
set -g status-right-length "100"
set -g status-right-attr "none"
set -g message-fg "colour8"
set -g message-command-bg "colour7"
set -g status-attr "none"
set -g status-utf8 "on"
set -g pane-border-fg "colour21"
set -g status-left-attr "none"
setw -g window-status-fg "colour20"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour21"
setw -g window-status-activity-attr "none"
setw -g window-status-activity-fg "colour20"
setw -g window-status-separator ""
setw -g window-status-bg "colour21"
set -g status-left "#[fg=colour20,bg=colour21] #S #[fg=colour21,bg=colour21,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour21,bg=colour21,nobold,nounderscore,noitalics]#[fg=colour20,bg=colour21] %Y-%m-%d | %H:%M #[fg=colour21,bg=colour21,nobold,nounderscore,noitalics]#[fg=colour20,bg=colour21] #h "
setw -g window-status-format "#[fg=colour20,bg=colour21] #I |#[fg=colour20,bg=colour21] #W "
setw -g window-status-current-format "#[fg=colour21,bg=colour7,nobold,nounderscore,noitalics]#[fg=colour8,bg=colour7] #I |#[fg=colour8,bg=colour7] #W #[fg=colour7,bg=colour21,nobold,nounderscore,noitalics]"
